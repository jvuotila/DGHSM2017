@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var home = Umbraco.TypedContentAtRoot().First();
    Random rnd = new Random();
    int partnersNodeId = int.Parse(Umbraco.Field("partnersNode").ToString());
    var i = 1;
}

<div class="parallax-container valign-wrapper" style="min-height: 300px;">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <h1>@CurrentPage.Name</h1>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="/imagegen.ashx?image=@Umbraco.TypedMedia(@Umbraco.Field(home, "backgroundImage" + rnd.Next(1, 3)).ToString()).Url&width=1200&constrain=false&crop=resize&compression=75" alt=""></div>
</div>
<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                <span class="flow-text left-align">@Html.Raw(Umbraco.Field("bodyText"))</span>
            </div>
        </div>
    </div>
</div>
@{
    if (Umbraco.Content(partnersNodeId).Children().Where("Visible").Count() > 0)
    {
        <div class="container">
            <div class="section">
                @foreach (var Partner in Umbraco.Content(partnersNodeId).Children().Where("Visible"))
                {
                    if (i % 2 == 1)
                    {
                        @:<div class="row">
                    }

                    <div class="col s12 m6">
                        <div class="icon-block">
                            <h4 class="center">@Partner.partnerName</h4>
                            <p class="center"><a href="@Partner.partnerURL" target="_blank"><img src="/imagegen.ashx?image=@Umbraco.TypedMedia(Umbraco.Field(Partner, "partnerLogo").ToString()).Url&height=70&constrain=false&crop=resize&compression=90" alt="@Partner.partnerName" /></a></p>
                            <p class="light">
                                @Html.Raw(Partner.partnerIntro)
                            </p>
                        </div>
                    </div>

                    if (i / 2 == 1)
                    {
                        @:</div>
                    }
                    i++;
                }

                @if (((i - 1) / 2) == 0)
                {
                    @:</div>
            }
            </div>
        </div>
    }
}