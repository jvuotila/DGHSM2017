@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var i = 1;
}

<div id="index-banner" class="parallax-container">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <div class="logoContainer">
                    <img src="@Umbraco.TypedMedia(@Umbraco.Field(CurrentPage, "logo").ToString()).Url?height=470&constrain=false&compression=90" alt="" class="logo">
                </div>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="@Umbraco.TypedMedia(@Umbraco.Field(CurrentPage, "backgroundImage1").ToString()).Url?width=1200&constrain=false&compression=75" alt=""></div>
</div>

<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12 center">
                <h1>@CurrentPage.Name</h1>
                <span class="flow-text">@Html.Raw(Umbraco.Field("bodyText"))</span>
            </div>
        </div>
    </div>
</div>

@if (CurrentPage.news.ToString() != string.Empty)
{
    if (Umbraco.Content(CurrentPage.news).Children().Where("Visible").Count() > 0)
    {
        <div class="container">
            <div class="section">
                @foreach (var News in Umbraco.Content(CurrentPage.news).Children().OrderBy("updateDate").Reverse().Where("Visible"))
                {
                    if (i > 6) { break; }
                    if (i % 3 == 1)
                    {
                        @:<div class="row">
                    }

                    <div class="col s12 m6 l4 hoverable" onclick="location.href='@News.Url';" style="cursor: pointer;">
                        <div class="icon-block">
                            <h2 class="center brown-text"><i class="material-icons">message</i></h2>
                            <h5 class="">@News.Name</h5>
                            <p class="">@News.UpdateDate.ToString("dd.MM.yyyy klo HH.mm")</p>
                            <p class="">@News.leadText</p>
                        </div>
                    </div>

                    if (i / 3 == 1)
                    {
                       @:</div>
                    }
                    i++;
                }
                @if (((i - 1) / 3) == 0)
                {
                    @:</div>
                }
                <div class="row">
                    <div class="col s12 m12 l12 center"><a href="@Umbraco.Content(CurrentPage.newsPage).Url" id="news-button" class="btn-large waves-effect waves-light light-green darken-2">Kaikki uutiset</a></div>
                </div>
            </div>
        </div>
    }
}
<div class="parallax-container valign-wrapper" style="min-height: 400px;">
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row center">
                <a href="@Umbraco.Content(CurrentPage.signupPage).Url" id="signup-button" class="btn-large waves-effect waves-light light-green darken-2">Ilmoittautuminen</a>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="@Umbraco.TypedMedia(@Umbraco.Field(CurrentPage, "backgroundImage2").ToString()).Url?width=1200&constrain=false&compression=75" alt=""></div>
</div>
